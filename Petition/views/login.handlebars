<div class="view">

    {{>petContainer}}
    <h2 id="loginhl">Please log in here.</h2>
    <form id="loginField" method="post">
        {{#if error}}
            <div  id="upsError"class="error">Oh no :( something either with the username or password does not add up!</div>
        {{/if}}
        E-Mail:<input  id="email" type="text" placeholder="email" name="email" ><br />
        Password:<input id="pw" type="password" placeholder="password" name="password"><br />
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button id="logIn">Submit</button>
    </form>
</div>
